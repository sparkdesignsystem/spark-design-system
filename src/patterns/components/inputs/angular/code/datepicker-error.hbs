<sprk-input-container iconContainerClasses="sprk-b-TextInputIconContainer">
  <label
    class="sprk-b-Label--with-icon"
    sprkLabel>
    Date Input (picker)
  </label>
  <sprk-icon iconType="calendar" sprk-input-icon></sprk-icon>
  <input
    name="datepicker_input"
    type="text"
    [ngClass]="{ 'sprk-b-TextInput--error': datepickerInput.invalid && datepickerInput.dirty, 'sprk-u-pll': true }"
    pattern="^(((0[1358]|1[02])([\\/-]?)(0[1-9]|[12]\\d|3[01])|(0[469]|11)([\\/-]?)(0[1-9]|[12]\\d|30)|02(\\/?)((0?\\d)|[12]\\d))(\\4|\\7|\\9)[12]\\d{3})?$"
    placeholder="MM/DD/YYYY"
    [(ngModel)]="datepicker_input"
    #datepickerInput="ngModel"
    data-id="datepicker-error-1"
    sprkFormatterDate
    sprkDatepicker
    sprkInput>
    <div [hidden]="isDatePickerValid" sprkFieldError>There is an error on this field.</div>
</sprk-input-container>
