---
name: Search Input
order: 13
---

<div class="sprk-b-InputContainer">
  <label for="{{#if idattr}}{{idattr}}{{else}}search-normal{{/if}}">Search</label>
  <input class="sprk-b-TextInput {{#if class}}{{class}} {{/if}}sprk-u-Size-100"
         id="{{#if idattr}}{{idattr}}{{else}}search-normal{{/if}}"
         type="search"
         role="search"
         aria-describedby="{{#if idattr}}{{idattr}}{{else}}search-normal{{/if}}--error-container"
         {{#if disabled}} disabled{{/if}}>
  <span class="sprk-b-ErrorText"
        id="{{#if idattr}}{{idattr}}{{else}}search-normal{{/if}}--error-container">{{#if errorMessage}}{{errorMessage}}{{/if}}</span>
</div>
