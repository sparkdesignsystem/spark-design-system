<section>
  {{#> drizzle.labelheader tag="h2" id=(toSlug name) labels=data.labels}}
    {{name}}
  {{/drizzle.labelheader}}
  <div class="drizzle-o-Grid drizzle-o-Grid--gallery">
    {{#each (data "icons")}}
        <div class="sprk-o-Stack{{#if data.noHeader}} sprk-u-mtn{{/if}}{{#if data.invisible}} sprk-u-Display--none{{/if}}{{#if data.gridItemFullWidth}} drizzle-o-Grid__item-full{{/if}}">
          <h3 class="drizzle-b-h3">{{this.name}}</h3>
          <div class="drizzle-o-ContentGrouping sprk-o-Stack__item">
            <div class="sprk-b-TypeBodyTwo drizzle-c-Preview">
              <div class="drizzle-c-Preview__example {{data.previewClass}}">
                <svg class="sprk-c-Icon sprk-c-Icon--xl" viewBox="{{this.viewBox}}">
                  <use xlink:href="#{{this.name}}" />
                </svg>
              </div>
              {{!-- Code sample --}}
              <div class="drizzle-c-Preview__code drizzle-u-Display--none" data-html-documentation>
                <button class="drizzle-b-Button drizzle-c-Preview__btn" data-clipboard-target="#clipboard-{{toSlug name}}" type="button">
                  Copy
                </button>
                <pre class="sprk-u-ptl">
                  <code class="drizzle-c-Preview__markup language-markup" id="clipboard-{{toSlug name}}">
&lt;svg class=&quot;sprk-c-Icon sprk-c-Icon--xl&quot; viewBox=&quot;0 0 100 100&quot;&gt;
  &lt;use xlink:href=&quot;#{{name}}&quot; /&gt;
&lt;/svg&gt;
                  </code>
                </pre>
              </div>
              <div class="drizzle-c-Preview__code drizzle-u-Display--none" data-angular-documentation>
                <button class="drizzle-b-Button drizzle-c-Preview__btn" data-clipboard-target="#clipboard-{{toSlug name}}" type="button">
                  Copy
                </button>
                <pre class="sprk-u-ptl">
                  <code class="drizzle-c-Preview__markup language-markup" id="clipboard-{{toSlug name}}">
&lt;sprk-icon iconType=&quot;{{ name }}&quot; additionalClasses=&quot;sprk-c-Icon--l&quot;&gt;&lt;/sprk-icon&gt;
                    </code>
                </pre>
              </div>
            </div>
          </div>
        </div>
    {{/each}}
  </div>
</section>
