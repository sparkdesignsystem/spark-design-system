{
  "name": "angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "precommit": "lint-staged",
    "build:angular-core": "ng-packagr -p src/app/spark-core-angular/package.json",
    "build:angular-extras-card": "ng-packagr -p src/app/spark-extras-angular/components/spark-extras-angular-card/package.json",
    "build:angular-extras-award": "ng-packagr -p src/app/spark-extras-angular/components/spark-extras-angular-award/package.json",
    "build:angular-extras-dictionary": "ng-packagr -p src/app/spark-extras-angular/components/spark-extras-angular-dictionary/package.json",
    "build:angular-extras-highlight-board": "ng-packagr -p src/app/spark-extras-angular/components/spark-extras-angular-highlight-board/package.json",
    "build:angular-package": "npm run build:angular-core && npm run build:angular-extras-card && npm run build:angular-extras-award && npm run build:angular-extras-dictionary && npm run build:angular-extras-highlight-board"
  },
  "lint-staged": {
    "*.scss": [
      "prettier-stylelint --write",
      "stylelint --syntax scss",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.4",
    "@angular/common": "^6.1.4",
    "@angular/compiler": "^6.1.4",
    "@angular/core": "^6.1.4",
    "@angular/forms": "^6.1.4",
    "@angular/http": "^6.1.4",
    "@angular/platform-browser": "^6.1.4",
    "@angular/platform-browser-dynamic": "^6.1.4",
    "@angular/router": "^6.1.4",
    "@sparkdesignsystem/spark-core": "^2.0.0",
    "@sparkdesignsystem/spark-extras": "^2.0.0",
    "@sparkdesignsystem/spark-core-angular": "1.0.0",
    "@sparkdesignsystem/spark-extras-angular-award": "1.0.0",
    "@sparkdesignsystem/spark-extras-angular-card": "1.0.0",
    "@sparkdesignsystem/spark-extras-angular-dictionary": "1.0.0",
    "@sparkdesignsystem/spark-extras-angular-highlight-board": "1.0.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.2.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular-devkit/build-ng-packagr": "~0.7.0",
    "@angular/cli": "^6.1.5",
    "@angular/compiler-cli": "^6.1.4",
    "@angular/language-service": "^6.1.3",
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/addon-links": "^3.4.10",
    "@storybook/addon-notes": "^3.4.10",
    "@storybook/addons": "^3.4.10",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "babel-core": "^6.26.3",
    "codelyzer": "~4.2.1",
    "husky": "^0.14.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^7.2.2",
    "ng-packagr": "^4.2.0",
    "prettier": "^1.14.2",
    "prettier-stylelint": "^0.4.2",
    "protractor": "^5.3.2",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.9.1",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "~2.7.2"
  }
}
