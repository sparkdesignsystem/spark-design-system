{
  "name": "spark-angular-workspace",
  "version": "0.0.0",
  "scripts": {
    "build": "npm run set-version && ng build spark-angular",
    "test": "ng test",
    "lint": "ng lint",
    "coverage": "ng test spark-angular --watch=false --code-coverage",
    "sassdocmodifiers": "sassdoc '../html/**/_*.scss' --parse > ../src/data/sass-modifiers.json",
    "docs:json": "compodoc --disableLifeCycleHooks -p ./tsconfig.json -e json -d .",
    "set-version": "PACKAGE_VERSION=$(node -p -e \"require('./projects/spark-angular/package.json').version\") && replace '(version).*' \"version: '$PACKAGE_VERSION'\" ./projects/spark-angular/src/environment/environment.ts",
    "prebuild:storybook": "npm run sassdocmodifiers",
    "storybook": "npm run prebuild:storybook && npm run docs:json && start-storybook -p 8006",
    "build-storybook": "npm run prebuild:storybook && npm run docs:json && build-storybook",
    "publish": "npm run build && cd dist/spark-angular && npm publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.0",
    "@angular/common": "~8.2.0",
    "@angular/compiler": "~8.2.0",
    "@angular/core": "~8.2.0",
    "@angular/forms": "~8.2.0",
    "@angular/platform-browser": "~8.2.0",
    "@angular/platform-browser-dynamic": "~8.2.0",
    "@angular/router": "~8.2.0",
    "replace": "^1.1.1",
    "rxjs": "~6.4.0",
    "classlist.js": "^1.1.20150312",
    "tiny-date-picker": "^3.2.8",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.802.2",
    "@angular-devkit/build-ng-packagr": "~0.802.2",
    "@angular/cli": "~8.2.2",
    "@angular/compiler-cli": "~8.2.0",
    "@angular/language-service": "~8.2.0",
    "@babel/preset-react": "^7.7.4",
    "@babel/traverse": "^7.6.0",
    "@compodoc/compodoc": "^1.1.11",
    "@sparkdesignsystem/spark": "^12.0.0",
    "@sparkdesignsystem/spark-react": "1.1.1",
    "@storybook/addon-a11y": "^5.3.3",
    "@storybook/addon-docs": "^5.3.3",
    "@storybook/addon-google-analytics": "^5.3.2",
    "@storybook/addons": "^5.3.3",
    "@storybook/angular": "^5.3.3",
    "@storybook/preset-scss": "^1.0.2",
    "@storybook/theming": "^5.3.3",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "babel-loader": "^8.0.6",
    "codelyzer": "^5.0.0",
    "css-loader": "^3.1.0",
    "eslint": "^6.5.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ng-packagr": "^5.3.0",
    "node-sass": "^4.12.0",
    "protractor": "~5.4.0",
    "sass-loader": "^7.1.0",
    "sassdoc": "^2.7.1",
    "style-loader": "^0.23.1",
    "ts-node": "~7.0.0",
    "tsickle": "^0.36.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3"
  }
}
