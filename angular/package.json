{
  "name": "spark-angular-workspace",
  "version": "0.0.0",
  "scripts": {
    "build": "npm run set-version && ng build spark-angular",
    "test": "jest --config ./projects/spark-angular/jest.config.js --verbose",
    "test:generate-output": "jest --config ./projects/spark-angular/jest.config.js --json --outputFile=./src/.jest-test-results.json",
    "test:watch": "jest -o --watch --config ./projects/spark-angular/jest.config.js",
    "lint": "ng lint",
    "coverage": "jest --coverage --config ./projects/spark-angular/jest.config.js",
    "docs:json": "compodoc --disableLifeCycleHooks -p ./tsconfig.json -e json -d .",
    "set-version": "PACKAGE_VERSION=$(node -p -e \"require('./projects/spark-angular/package.json').version\") && replace '(version).*' \"version: '$PACKAGE_VERSION'\" ./projects/spark-angular/src/environment/environment.ts",
    "prebuild:storybook": "npm run test:generate-output && npm run docs:json",
    "storybook": "npm run prebuild:storybook && start-storybook -p 8006 -s ../storybook-utilities/favicon",
    "build-storybook": "npm run prebuild:storybook && build-storybook -s ../storybook-utilities/favicon",
    "publish": "npm run build && cd dist/spark-angular && npm publish"
  },
  "private": true,
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "./src/setup-jest.ts"
    ]
  },
  "dependencies": {
    "@angular/animations": "~8.2.0",
    "@angular/common": "~8.2.0",
    "@angular/compiler": "~8.2.0",
    "@angular/core": "~8.2.0",
    "@angular/forms": "~8.2.0",
    "@angular/platform-browser": "~8.2.0",
    "@angular/platform-browser-dynamic": "~8.2.0",
    "@angular/router": "~8.2.0",
    "classlist.js": "^1.1.20150312",
    "replace": "^1.1.1",
    "rxjs": "~6.4.0",
    "tiny-date-picker": "github:sparkdesignsystem/tiny-date-picker#v3.2.9",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.900.7",
    "@angular-devkit/build-ng-packagr": "~0.802.2",
    "@angular/cli": "~8.2.2",
    "@angular/compiler-cli": "~8.2.0",
    "@angular/language-service": "~8.2.0",
    "@babel/preset-react": "^7.7.4",
    "@babel/traverse": "^7.6.0",
    "@compodoc/compodoc": "^1.1.11",
    "@storybook/addon-a11y": "^5.3.14",
    "@storybook/addon-docs": "^5.3.14",
    "@storybook/addon-google-analytics": "^5.3.14",
    "@storybook/addon-jest": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/angular": "^5.3.14",
    "@storybook/preset-scss": "^1.0.2",
    "@storybook/theming": "^5.3.14",
    "@types/jest": "^25.1.3",
    "@types/node": "~8.9.4",
    "babel-loader": "^8.0.6",
    "codelyzer": "^5.0.0",
    "css-loader": "^3.1.0",
    "eslint": "^6.5.1",
    "jest": "^25.1.0",
    "jest-preset-angular": "^8.1.2",
    "ng-packagr": "^5.3.0",
    "node-sass": "^4.13.1",
    "protractor": "~5.4.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-node": "~7.0.0",
    "tsickle": "^0.36.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3",
    "whatwg-fetch": "^3.0.0"
  }
}
